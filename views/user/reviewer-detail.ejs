<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Thinky - <%= reviewer.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .content-display {
      font-size: 1.05rem;
    }
  </style>
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="bi bi-book-fill me-2"></i>Thinky
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">
              <i class="bi bi-house-fill me-1"></i>Home
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/login">
              <i class="bi bi-shield-lock-fill me-1"></i>Login
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/" style="color: var(--dark-pink);">Home</a></li>
        <li class="breadcrumb-item"><a href="/subject/<%= reviewer.subjects.id %>/reviewers" style="color: var(--dark-pink);"><%= reviewer.subjects.name %></a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= reviewer.title %></li>
      </ol>
    </nav>

    <!-- Reviewer Header -->
    <div class="card mb-4">
      <div class="card-header">
        <h2 class="mb-0"><i class="bi bi-file-text-fill me-2"></i><%= reviewer.title %></h2>
      </div>
      <div class="card-body">
        <p class="text-muted mb-0">
          <i class="bi bi-tag-fill me-2"></i>Subject: <strong><%= reviewer.subjects.name %></strong>
          <span class="ms-4"><i class="bi bi-calendar-event me-2"></i>Created: <%= new Date(reviewer.created_at).toLocaleDateString() %></span>
          <% if (reviewer.updated_at && reviewer.updated_at !== reviewer.created_at) { %>
            <span class="ms-4"><i class="bi bi-pencil-square me-2"></i>Updated: <%= new Date(reviewer.updated_at).toLocaleDateString() %></span>
          <% } %>
        </p>
      </div>
    </div>

    <!-- Reviewer Content -->
    <div class="content-display">
      <%- reviewer.content %>
    </div>

    <!-- Navigation Buttons (responsive: left group / right group) -->
    <div class="mt-4 mb-5 d-flex flex-column flex-sm-row justify-content-between align-items-start gap-2">
      <div class="d-flex flex-wrap gap-2">
        <a href="/subject/<%= reviewer.subjects.id %>/reviewers" class="btn btn-secondary">
          <i class="bi bi-arrow-left me-2"></i>Back to <%= reviewer.subjects.name %>
        </a>
        <a href="/" class="btn btn-secondary">
          <i class="bi bi-house-fill me-2"></i>Back to Home
        </a>
      </div>

      <div class="d-flex flex-wrap gap-2">
        <button id="btnDownloadPdf" class="btn btn-primary">
          <i class="bi bi-download me-2"></i>Download PDF
        </button>

        <% if (reviewer.quiz) { %>
          <a href="/reviewer/<%= reviewer.id %>/quiz" class="btn btn-success">
            <i class="bi bi-question-circle me-2"></i>Take Quiz
          </a>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="footer mt-5">
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> Thinky. All rights reserved.</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!-- html2pdf for PDF export -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.3/html2pdf.bundle.min.js"></script>

  <script>
    // Download PDF of the reviewer content (guard for missing button)
    var pdfBtn = document.getElementById('btnDownloadPdf');
    if (pdfBtn) {
      pdfBtn.addEventListener('click', function() {
        var element = document.querySelector('.content-display');
        var opt = {
          margin:       0.5,
          filename:     ("" + "<%= reviewer.title.replace(/\s+/g, '_') %>" ).replace(/[^a-zA-Z0-9_\-\.]/g,'') + '.pdf',
          image:        { type: 'jpeg', quality: 0.98 },
          html2canvas:  { scale: 2, useCORS: true },
          jsPDF:        { unit: 'in', format: 'letter', orientation: 'portrait' }
        };
        // Use html2pdf to save
        html2pdf().set(opt).from(element).save();
      });
    }
  </script>
</body>
</html>
