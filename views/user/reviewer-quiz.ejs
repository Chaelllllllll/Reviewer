<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Thinky - <%= reviewer ? reviewer.title : 'Quiz' %> — Quiz</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    :root { --form-bg: #ffffff; --accent: #f6c2d0; --accent-dark: #e36a87; --muted: #6c757d; }
    body { background: #fff6fb; }
    .form-container { max-width: 820px; margin: 28px auto; }
    .gform-card { background: var(--form-bg); border-radius:8px; box-shadow: 0 8px 30px rgba(0,0,0,0.06); padding:28px; }
    .gform-title { font-size:20px; font-weight:600; color:var(--accent-dark); }
    .gform-sub { color:var(--muted); margin-top:6px; }
    .question-area { min-height:180px; display:flex; flex-direction:column; justify-content:center; }
    .q-prompt { font-size:18px; margin-bottom:12px; }
    .mcq-list .form-check { padding:8px 12px; border-radius:6px; margin-bottom:8px; cursor:pointer; }
    .mcq-list .form-check:hover { background:#fff0f6; }
    .mcq-list .form-check-input { margin-top:6px; }
    .nav-controls { display:flex; gap:8px; align-items:center; margin-top:20px; }
    .progress-dots { display:flex; gap:6px; align-items:center; }
    .dot { width:10px; height:10px; border-radius:50%; background:#eee; }
    .dot.active { background:var(--accent-dark); }
    .required-star { color:#d6336c; margin-left:6px; }
    .gform-footer { display:flex; justify-content:space-between; align-items:center; margin-top:18px; }
    #quizResult .result-item { background:#fff; padding:12px; border-radius:6px; margin-bottom:8px; }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="bi bi-book-fill me-2"></i>Thinky
      </a>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="card">
      <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
          <div class="quiz-header">
            <div class="quiz-title"><i class="bi bi-list-check me-2"></i>Quiz — <%= reviewer.title %></div>
            <div class="text-muted">&nbsp;&middot;&nbsp; <%= reviewer.subjects ? reviewer.subjects.name : '' %></div>
          </div>
          <div class="text-end">
          </div>
        </div>
        
      </div>

      <div class="card-body">
        <p class="text-muted">Take this quiz to test your knowledge.</p>

        <div class="mb-3">
          <strong>Settings:</strong>
          <ul>
            <li>Scramble questions: <%= (reviewer.quiz && reviewer.quiz.settings && reviewer.quiz.settings.shuffle) ? 'Yes' : 'No' %></li>
          </ul>
        </div>

        <div id="quizApp" class="form-container">
          <% if (typeof reviewer !== 'undefined') { %>
            <script id="quizData" type="application/json"><%- JSON.stringify(reviewer.quiz || {}) %></script>
          <% } %>
          <div class="gform-card">
            <div>
              <div class="gform-title"><i class="bi bi-list-check me-2"></i><%= reviewer ? reviewer.title : 'Quiz' %></div>
                <div class="gform-sub"><%= reviewer && reviewer.subjects ? reviewer.subjects.name : '' %> &nbsp;•&nbsp; <span class="text-muted">Quiz</span></div>
            </div>

            <div id="gformBody" class="mt-4">
              <% if (reviewer.quiz && reviewer.quiz.questions && reviewer.quiz.questions.length) { %>
                <div id="questionShell">
                  <div class="question-area">
                    <!-- question will be rendered here by JS -->
                    <div id="qPrompt" class="q-prompt"></div>
                    <div id="qInput" class="mb-2"></div>
                    <div id="qHelp" class="text-muted small"></div>
                  </div>

                  <div class="gform-footer">
                    <div class="progress-dots" id="progressDots"></div>
                    <div>
                      <div class="nav-controls">
                        <button type="button" id="btnBack" class="btn btn-light">Back</button>
                        <button type="button" id="btnNext" class="btn btn-primary">Next</button>
                      </div>
                    </div>
                  </div>
                </div>

                <div id="quizResult" style="display:none; margin-top:18px;"></div>
              <% } else { %>
                <div class="alert alert-warning">No quiz questions found for this reviewer.</div>
              <% } %>
            </div>
          </div>
        </div>

        <div class="mt-3">
          <a href="/reviewer/<%= reviewer ? reviewer.id : '' %>" class="btn btn-secondary"><i class="bi bi-arrow-left me-2"></i>Back</a>
        </div>
      </div>
    </div>
  </div>

  <footer class="footer mt-5">
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> Thinky. All rights reserved.</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    (function(){
      // Read quiz JSON from the embedded application/json block (if present)
      var quiz = {};
      try {
        var el = document.getElementById('quizData');
        if (el) quiz = JSON.parse(el.textContent || '{}');
      } catch (e) { quiz = {}; }
      var questions = Array.isArray(quiz.questions) ? quiz.questions.slice() : [];
      var scramble = quiz.settings && quiz.settings.shuffle;
      var current = 0;

      function shuffleArray(a) { for (var i=a.length-1;i>0;i--){var j=Math.floor(Math.random()*(i+1)); var t=a[i]; a[i]=a[j]; a[j]=t;} }

      // timer removed per user request

      function buildDots(n){ var wrap=document.getElementById('progressDots'); wrap.innerHTML=''; for(var i=0;i<n;i++){ var d=document.createElement('div'); d.className='dot'+(i===0?' active':''); wrap.appendChild(d);} }

      function showQuestion(idx){ var q = questions[idx]; var promptEl=document.getElementById('qPrompt'); var inputEl=document.getElementById('qInput'); var helpEl=document.getElementById('qHelp'); promptEl.innerHTML=''; inputEl.innerHTML=''; helpEl.textContent=''; if(!q){ promptEl.textContent='(question missing)'; return; } promptEl.innerHTML = '<span>'+ (idx+1) +'.</span> ' + (q.prompt || '(no prompt)') + (q.required ? '<span class="required-star">*</span>' : ''); if(q.type==='mcq'){ var list=document.createElement('div'); list.className='mcq-list'; q.choices.forEach(function(choice,cidx){ var id='q'+idx+'c'+cidx; var wrapper=document.createElement('label'); wrapper.className='form-check'; var radio=document.createElement('input'); radio.className='form-check-input'; radio.type='radio'; radio.name='answer'; radio.value=cidx; radio.id=id; var span=document.createElement('span'); span.className='form-check-label'; span.textContent=choice; wrapper.appendChild(radio); wrapper.appendChild(span); list.appendChild(wrapper); }); inputEl.appendChild(list); } else if(q.type==='short'){ var ip=document.createElement('input'); ip.type='text'; ip.className='form-control'; ip.name='answer'; inputEl.appendChild(ip); } else { var ta=document.createElement('textarea'); ta.className='form-control'; ta.name='answer'; ta.rows=5; inputEl.appendChild(ta); } updateNavButtons(); highlightDot(idx); }

      function getAnswerForCurrent(){ var q=questions[current]; if(!q) return null; if(q.type==='mcq'){ var checked=document.querySelector('input[name="answer"]:checked'); return checked? checked.value: null; } else { var el=document.querySelector('[name="answer"]'); return el? el.value.trim(): ''; } }

      function updateNavButtons(){ document.getElementById('btnBack').style.display = current>0? 'inline-block':'none'; document.getElementById('btnNext').textContent = current<questions.length-1? 'Next':'Submit'; }

      function highlightDot(i){ var dots=document.querySelectorAll('#progressDots .dot'); dots.forEach(function(d,idx){ d.classList.toggle('active', idx===i); }); }

      function collectAllAnswers(){ var answers = []; for(var i=0;i<questions.length;i++){ answers[i] = questions[i].answer || null; } return answers; }

      function finalize(){ // grade MCQs and show review
        var score=0; var totalAuto=0; var out=[]; for(var i=0;i<questions.length;i++){ var q=questions[i]; var ans=q.answer; if(q.type==='mcq'){ totalAuto++; var ok = (ans !== null && Number(ans)===Number(q.correct)); if(ok) score++; out.push({q:q, given:ans, correct:q.correct}); } else { out.push({q:q, given:ans}); } }
        var resultDiv=document.getElementById('quizResult'); resultDiv.style.display='block'; var html=['<h5>Results</h5>']; if(totalAuto>0) html.push('<p><strong>Score:</strong> '+score+' / '+totalAuto+'</p>'); html.push('<div>'); out.forEach(function(r,idx){ html.push('<div class="result-item"><strong>Q'+(idx+1)+':</strong> '+(r.q.prompt||'')+'<br/>'); if(r.q.type==='mcq'){ html.push('<strong>Your answer:</strong> '+ (r.given !== null && typeof r.q.choices[r.given] !== 'undefined' ? r.q.choices[r.given] : '<em>Not answered</em>') +'<br/>'); html.push('<strong>Correct:</strong> '+r.q.choices[r.correct]+'<br/>'); } else { html.push('<strong>Your answer:</strong> '+ (r.given||'<em>Not answered</em>') +'<br/><small class="text-muted">Manual grading required.</small>'); } html.push('</div>'); }); html.push('</div>'); resultDiv.innerHTML = html.join(''); // disable interactions
        document.getElementById('btnBack').style.display='none'; document.getElementById('btnNext').style.display='none';
      }

      document.addEventListener('DOMContentLoaded', function(){ if(!questions.length) return; if(scramble) shuffleArray(questions); buildDots(questions.length); // show first
        showQuestion(0);
        // wire next/back
        document.getElementById('btnNext').addEventListener('click', function(){ var q=questions[current]; var val = getAnswerForCurrent(); if(q.required){ if(q.type==='mcq'){ if(val===null){ alert('Please select an answer to continue.'); return; } } else { if(!val){ alert('Please provide an answer to continue.'); return; } } }
          // store answer
          questions[current].answer = (val===null? null : val);
          if(current < questions.length-1){ current++; showQuestion(current); } else { finalize(); }
        });
        document.getElementById('btnBack').addEventListener('click', function(){ if(current>0){ current--; showQuestion(current); } });
        // timer disabled
      });
    })();
  </script>
</body>
</html>
