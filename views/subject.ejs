<%- include('partials/header') -%>
<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <h1><%= subject.name %></h1>
      <div class="text-muted"><%= subject.description %></div>
    </div>
    <div>
      <a href="/subject/<%= subject.id %>/reviewer/new" class="btn btn-success">Add Reviewer</a>
      <a href="/" class="btn btn-secondary">Back</a>
    </div>
  </div>

  <% if (reviewers && reviewers.length) { %>
    <div class="list-group">
      <% reviewers.forEach(r => { %>
        <a href="/reviewer/<%= r.id %>" class="list-group-item list-group-item-action">
          <strong><%= r.title %></strong>
          <div class="small text-muted">Posted <%= new Date(r.created_at).toLocaleString() %></div>
        </a>
      <% }) %>
    </div>
  <% } else { %>
    <p class="text-muted">No reviewers yet for this subject.</p>
  <% } %>
</div>
<%- include('partials/footer') -%>
